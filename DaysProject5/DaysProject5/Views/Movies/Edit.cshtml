@model DaysProject5.Models.Movie

@{
    ViewBag.Title = "Edit";
}

<script>
    function submitEditMovie() {
        $.ajax({
            url: "@Url.Action("EditMovie", "Movies")",
            type: 'POST',
            data: {
                ID: $('#ID').val(),
                Title: $('#Title').val(),
                WeekendRevenue: $('#WeekendRevenue').val(),
                GrossRevenue: $('#GrossRevenue').val(),
                Release: $('#Release').val(),
                Recommended: $('#Recommended').val()
            },
            success: function (result) {
                alert("Success!");
                //window.location = "@Url.Action("Index", "Movies")";
        }
    });
    };
</script>

<h2>Edit</h2>


